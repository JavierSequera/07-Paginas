<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_07_Paginas.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry FontSize="20"
                   x:Name="entryNombre"
                   VerticalOptions="Center" 
            HorizontalOptions="Center"
                   />
            <Entry FontSize="20"
                   x:Name="entryApellido"
                   VerticalOptions="Center" 
            HorizontalOptions="Center"
                   />
            <Button 
                Text="Pulsa para cambiar de página"
                Clicked="OnCounterClicked"
                VerticalOptions="Center" 
            HorizontalOptions="Center"
               />
            <Button 
                Text="Navegar a pagina 4"
                Clicked="NavegarPag4"
                VerticalOptions="Center" 
            HorizontalOptions="Center"
               />
            <Button 
                Text="Navegar a pagina 5"
                Clicked="NavegarPag5"
                VerticalOptions="Center" 
            HorizontalOptions="Center"
               />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
